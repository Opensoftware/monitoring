{
  "checks": {
    "nginx_check": {
      "type": "metric",
      "command": "check-procs.rb -p nginx",
      "interval": 30,
      "subscribers": ["nginx"],
      "handlers": ["flapjack"]
    },
    "load_metrics": {
      "type": "metric",
      "command": "load-metrics.rb",
      "subscribers": ["all"],
      "handlers": ["relay"],
      "interval": 5
    },
    "memory_metrics": {
      "type": "metric",
      "output_type": "graphite",
      "command": "memory-metrics.rb",
      "subscribers": ["all"],
      "handlers": ["relay"],
      "interval": 5
    }
  }
}
